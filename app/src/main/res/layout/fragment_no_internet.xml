<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:paddingTop="@dimen/default_screen_padding"
    android:paddingLeft="@dimen/default_screen_padding"
    android:paddingRight="@dimen/default_screen_padding"
    android:orientation="vertical">

    <TextView
        android:id="@+id/notInternetMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="@string/label_no_internet_message"
        android:textColor="@color/dark_pink"
        android:textSize="@dimen/font_large"
        android:lineSpacingMultiplier="1.3"/>

    <TextView
        android:id="@+id/tryLaterMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="25dp"
        android:gravity="center"
        android:text="@string/try_later_message"
        android:textColor="@color/pink"
        android:textSize="@dimen/font_medium"
        android:lineSpacingMultiplier="1.3"/>

    <ImageView
        android:id="@+id/microphoneIcon"
        android:layout_width="@dimen/large_icon_logo"
        android:layout_height="@dimen/large_icon_logo"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="25dp"
        android:layout_gravity="center"
        android:src="@drawable/microphone_icon"
        android:scaleType="centerInside"
        />
    <Button
        android:id="@+id/tryAgainButton"
        android:layout_width="@dimen/button_large_width"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="25dp"
        android:layout_gravity="center"
        android:background="@color/teal"
        android:textColor="@color/cream"
        android:text="@string/no_internet_refresh_message"
        android:textSize="@dimen/font_large"/>

</LinearLayout>

</LinearLayout>